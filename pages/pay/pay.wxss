.snackShop-pay .address-content {
  height: 150rpx;
  text-align: center;
  position: relative;
  line-height: 150rpx;
  color: #ddd;
  border-bottom: 5rpx solid #ddd;
}
.snackShop-pay .address-content::after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  border-top: 3rpx solid gray;
  border-right: 3rpx solid gray;
  right: 50rpx;
  top: 62rpx;
  transform: rotate(45deg);
}
.snackShop-pay .address-content .address-top {
  width: 100vw;
  height: 60rpx;
  padding: 10rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  display: flex;
}
.snackShop-pay .address-content .address-top .username {
  margin-right: 150rpx;
}
.snackShop-pay .address-content .address-bottom {
  width: 100vw;
  height: 60rpx;
  padding: 10rpx;
  text-align: left;
  line-height: 60rpx;
  font-size: 30rpx;
}
.snackShop-pay .carts-list {
  height: 180rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #ddd;
}
.snackShop-pay .carts-list .carts-item {
  display: flex;
  font-size: 35rpx;
}
.snackShop-pay .carts-list .carts-item .item-img {
  margin-right: 20rpx;
  width: 150rpx;
}
.snackShop-pay .carts-list .carts-item .item-detail .title {
  line-height: 50rpx;
}
.snackShop-pay .carts-list .carts-item .item-detail .price {
  line-height: 50rpx;
}
.snackShop-pay .carts-list .carts-item .item-detail .num {
  line-height: 50rpx;
}
.snackShop-pay .bottom {
  width: 100vw;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.snackShop-pay .bottom .totalPrice {
  padding: 10rpx;
  color: var(--themeColor);
}
.snackShop-pay .bottom .toPay {
  width: 200rpx;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: var(--themeColor);
  color: white;
}
